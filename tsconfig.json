{
  "compilerOptions": {
    "target": "ES2022",
    // Using NodeNext for modern module resolution (recommended with ESLint flat config/ESM)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // outDir and rootDir correctly removed as you use ts-node
    "types": ["node", "express"]
  },
  "include": [
    // Include all source and test files
    "**/*.ts",
    "**/*.mts",
    "**/*.js",

    // Explicitly include config files for type checking/linting
    "playwright.config.ts",
    "eslint.config.mjs" // <-- UPDATED to .mjs
  ],
  "exclude": ["node_modules"]
}
