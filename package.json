{
  "name": "qa-automation-assignment",
  "version": "1.0.0",
  "description": "Playwright API and E2E, and k6 Performance test suite.",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "web": "ts-node src/server.ts",
    "test": "playwright test",
    "test:api": "playwright test --project=api",
    "test:e2e": "playwright test --project=e2e",
    "test:load": "mkdir -p ${REPORT_DIR:-reports}/load; k6 run tests/load/timestamp-load.test.js",
    "report:pw": "npx playwright show-report ${REPORT_DIR:-reports}/functional/html",
    "report:load": "open ${REPORT_DIR:-reports}/load/load-test-report.html",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "api",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/express": "^5.0.5",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.3.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "express": "^5.1.0",
    "node-fetch": "^3.3.2"
  }
}
